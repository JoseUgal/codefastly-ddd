{
  "name": "codefastly-ddd",
  "version": "1.0.0",
  "main": "index.js",
  "repository": {
    "url": "https://github.com/JoseUgal/codefastly-ddd"
  },
  "license": "",
  "engines": {
    "node": ">=16.17.0",
    "npm": ">=8.19.2"
  },
  "scripts": {
    "dev:moas:backend": "NODE_ENV=dev ts-node-dev --ignore-watch node_modules ./src/apps/moas/backend/start.ts",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write 'src/**/*.{ts,js}'",
    "git:commit": "sui-mono commit",
    "git:check": "sui-mono check",
    "build": "npm run build:clean && npm run build:tsc && npm run build:di",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:di": "copy 'src/**/*.{json,yaml,html,png}' dist/src",
    "build:clean": "rm -r dist; exit 0"
  },
  "dependencies": {
    "body-parser": "1.20.1",
    "compression": "1.7.4",
    "errorhandler": "1.5.1",
    "express": "4.18.2",
    "express-promise-router": "4.1.1",
    "express-validator": "6.14.2",
    "helmet": "6.0.1",
    "http-status": "1.5.3",
    "ts-node": "10.9.1",
    "typescript": "4.9.4"
  },
  "devDependencies": {
    "@s-ui/mono": "2.34.0",
    "@types/compression": "1.7.2",
    "@types/errorhandler": "1.5.0",
    "@types/express": "4.17.15",
    "@types/node": "18.11.15",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "8.0.2",
    "lint-staged": "13.1.0",
    "prettier": "^2.8.1",
    "ts-node-dev": "2.0.0"
  },
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
